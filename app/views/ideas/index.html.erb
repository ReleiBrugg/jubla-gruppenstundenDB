<h1>Listing ideas</h1>

<%= link_to 'New idea', new_idea_path %>

<table>
  <tr>
    <th>Titel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea_path(idea),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>