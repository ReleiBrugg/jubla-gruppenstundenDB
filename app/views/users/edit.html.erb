<% provide(:title, "Benutzer bearbeiten") %>
<h1>Bearbeite dein Profile</h1>

<%= simple_form_for @user, html: {:class => 'form-horizontal'}  do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <% if moderator? %>
        <div class="form-group">
            <label for="notifications" class="optional control-label col-sm-2">Benachrichtigungen:</label>
            <div class="col-sm-8">
                <span class="checkbox">
                    <%= f.check_box :notifications %>
                  <label class="check_boxes" for="user_notifications">bei neuen Gruppenstunden</label>
                </span>
            </div>
        </div>
    <% end %>
    <%= f.button :submit, 'Speichere Ã„nderungen', class: 'col-sm-offset-2' %>
<% end %>