<% provide(:title, 'Anmeldung') %>
<h1>Anmeldung</h1>


<%= simple_form_for :sessions, url: sessions_path, html: {:class => 'form-horizontal'} do |f| %>

    <%= f.input :email %>
    <%= f.input :password %>

    <%= f.button :submit, class: 'col-sm-offset-2' %>
<% end %>

<p class="col-sm-offset-2">Noch kein Acccount? <%= link_to 'Melde dich jetzt an!', signup_path %></p>