<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>


<%= simple_form_for :sessions, url: sessions_path, html: {:class => 'form-horizontal'} do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, placeholder: 'E-Mail' %>
    <%= f.input :password, placeholder: 'Password' %>

    <%= f.button :submit, 'Sign in', class: 'col-sm-offset-2' %>
<% end %>
<p class="col-sm-offset-2">New user? <%= link_to 'Sign up now!', signup_path %></p>